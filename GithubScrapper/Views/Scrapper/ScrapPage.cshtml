@model IEnumerable<RepositoryData>
@{
    ViewData["Title"] = "ScrapPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}

<section class="content container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="chart-box">
				<h4>------</h4>

				<div class="bs-example" data-example-id="bordered-table">
					<form method="post">
						<label>Hesap İsmi:</label>
						<h3>@ViewBag.name</h3>
						<label>Hesap Takma İsim:</label>
						<h3>@ViewBag.nickname</h3>
						<label>Repository Sayısı</label>
						<h3>@ViewBag.repositoryCount</h3>
                        <label>Toplam En çok kullanılan dil</label>
                        <h3>@ViewBag.mostUsedOverallLanguage</h3>
                        <label>Aktiflik Seviyesi</label>
                        <h3>@ViewBag.activityLevel</h3>

                        <div class="col-lg-12 grid-margin stretch-card">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Repository Listesi</h4>

                                    <div class="table-responsive pt-3">
                                        <table class="table table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Repository İsmi</th>
                                                    <th>En çok kullanılan dil</th>
                                                    <th>Görünüm</th>
                                                    <th>Güncellenme Tarihi</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    count++;
                                                    <tr>
                                                        <td>@count</td>
                                                        <td>@item.RepositoryName</td>
                                                        <td>@item.MostUsedLanguage</td>
                                                        <td>@item.Visibility</td>
                                                        <td>@item.UpdateDate</td>

                                                    </tr>
                                                }
                                            </tbody>
                                        </table>


                                    </div>
                                </div>
                            </div>
                        </div>

					</form>
				</div>
			</div>
		</div>

	</div>
</section>

